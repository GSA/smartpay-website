---
const { id, pages, category} = Astro.props;
---
<label class="usa-label text-bold" for="page_nav">Page navigation</label>
<select class="usa-select" name="page_nav" id="page_nav" onchange="window.location.href=this.value;">
    {pages.map(page => (
      <option value={`${import.meta.env.BASE_URL}${category}/${page.slug}`} selected={id === page.id ? true : false }>
        {page.data.title}
      </option>
    ))}
</select>
